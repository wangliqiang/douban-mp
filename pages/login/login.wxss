/* pages/login/login.wxss */

.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 0 30rpx;
}

.logo {
	width: 144rpx;
	height: 144rpx;
	margin: 40rpx 0;
}

.btn-login {
	height: 80rpx;
	line-height: 80rpx;
	width: 100%;
	text-align: center;
	border-radius: 10rpx;
}

.wechat {
	background-color: #42bd55;
	color: #ffffff;
	margin-bottom: 30rpx;
}

.douban {
	background-color: #ffffff;
	color: #42bd55;
	border: 2rpx solid #42bd55;
}

.agreement {
	color: #9d9d9d;
	display: flex;
	font-size: 24rpx;
	position: absolute;
	bottom: 50rpx;
}

.agreement .open {
	color: #4bb65c;
	margin-left: 10rpx;
}