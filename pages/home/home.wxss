/* pages/home/home.wxss */

.search-wrapper {
  background-color: #42bd55;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 15rpx;
  margin-bottom: 20rpx;
}

.search {
  background-color: #fff;
  border-radius: 10rpx;
  height: 60rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.main {
  padding-bottom: 10rpx;
}

.row{
  margin-bottom: 30rpx;
  height: 374rpx;
}

.title-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.title-wrapper .title {
  color: #494949;
  font-weight: bold;
  font-size: 32rpx;
}
.title-wrapper .more {
  color: #0db019;
  display: flex;
  align-items: center;
}
.title-wrapper .arrow {
  width: 15rpx;
  height: 15rpx;
  border-right: 3rpx solid #0db019;
  border-bottom: 3rpx solid #0db019;
  transform: rotate(-45deg);
}

.items {
  white-space: nowrap;
}

.items .item {
  margin-left: 30rpx;
}

.items .item:last-of-type {
  margin-right: 30rpx;
} 